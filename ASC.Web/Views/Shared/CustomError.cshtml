@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor

@{
    ViewData["Title"] = "Error";
    Layout = !httpContextAccessor.HttpContext.User.Identity.IsAuthenticated ? "_Layout" : "_SecuredLayout";
}

<div class="row">
    <div class="col s12">
        <div class="card-panel orange lighten-1 margin-bottom-50px margin-top-50px">
            <span class="white-text">
                An error occurred while processing your request. Please contact customer
                service with following Ticket No. @ViewData["ExceptionId"]
            </span>
        </div>
    </div>
</div>